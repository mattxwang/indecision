---
import Layout from '../layouts/Layout.astro';
import Bdd from '../bdd/Bdd'
import Footer from '../ui/Footer.astro';
---

<Layout title="bdds">
	<main class="app">
    <section>
      <h1 class="text-4xl text-bold">make your own bdd (using rsdd)</h1>
    </section>
    <Bdd client:load />
    <Footer />
	</main>
</Layout>

<style is:global>
.app {
  width: 100%;
}

body {
  margin: 0;
  display: flex;
  place-items: center;
  min-width: 320px;
  min-height: 100vh;
}

section {
  margin: 2rem auto;
  max-width: 60rem;
}

/* Tailwind overrides */
a {
  color: inherit !important;
  text-decoration: underline !important;
}
</style>
